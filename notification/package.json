    "cors": "^2.8.4",
    "cross-env": "^5.1.5",
    "dotenv-safe": "^5.0.1",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "graphql": "^0.13.2",
    "graphql-import": "^0.5.2",
    "graphql-request": "^1.6.0",
    "graphql-tools": "^3.0.1",
    "jsonwebtoken": "^8.2.1",
    "merge-graphql-schemas": "^1.5.1",
