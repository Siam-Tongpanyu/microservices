    "sqs-consumer": "^3.8.0",
    "validator": "^10.3.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "jest": "^22.4.4",
    "nodemon": "^1.17.4",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3"
